<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kitpages_chain.chain.manager">Kitpages\ChainBundle\Service\ChainManager</parameter>
        <parameter key="kitpages_chain.command.manager">Kitpages\ChainBundle\Service\CommandManager</parameter>
    </parameters>

    <services>
        <service id="kitpages_chain.chain" class="%kitpages_chain.chain.manager%" >
            <argument>%kitpages_chain.chain_list%</argument>
            <argument type="service" id="kitpages_chain.command"/>
            <argument type="service" id="logger"/>
        </service>
        <service id="kitpages_chain.command" class="%kitpages_chain.command.manager%" >
            <argument>%kitpages_chain.command_list%</argument>
            <argument type="service" id="service_container" />
        </service>
    </services>

</container>
